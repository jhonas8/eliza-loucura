{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@elizaos/core": [
                "../../packages/core/src"
            ],
            "@elizaos/client-twitter": [
                "../../packages/client-twitter/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../../packages/core"
        },
        {
            "path": "../../packages/client-twitter"
        }
    ]
}
