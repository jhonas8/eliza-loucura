{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@elizaos/core": [
                "../core/src/index.ts"
            ],
            "@elizaos/client-twitter": [
                "../client-twitter/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../client-twitter"
        }
    ]
}

