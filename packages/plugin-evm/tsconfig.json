{
    "extends": "../core/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "declaration": true,
        "composite": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.json"
    ],
    "files": [
        "src/index.ts",
        "src/actions/bridge.ts",
        "src/actions/swap.ts",
        "src/actions/transfer.ts"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}
