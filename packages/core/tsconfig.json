{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "composite": true,
        "declarationMap": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.json"
    ],
    "files": [
        "src/index.ts",
        "src/config.ts",
        "src/actions.ts",
        "src/context.ts",
        "src/database.ts",
        "src/defaultCharacter.ts",
        "src/embedding.ts",
        "src/evaluators.ts",
        "src/generation.ts",
        "src/goals.ts",
        "src/memory.ts",
        "src/messages.ts",
        "src/models.ts",
        "src/posts.ts",
        "src/providers.ts",
        "src/relationships.ts",
        "src/runtime.ts",
        "src/settings.ts",
        "src/types.ts",
        "src/logger.ts",
        "src/parsing.ts",
        "src/uuid.ts",
        "src/environment.ts",
        "src/cache.ts",
        "src/utils.ts",
        "src/knowledge.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
