{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "composite": true,
        "rootDir": "./src",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
