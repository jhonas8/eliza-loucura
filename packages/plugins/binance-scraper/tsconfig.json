{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "./src",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../../core"
        }
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
